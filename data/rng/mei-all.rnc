namespace xlink = "http://www.w3.org/1999/xlink"

# **************************************************************

# * MEI datatypes                                              *

# **************************************************************
include "datatypes.rnc" inherit = mei
# **************************************************************

# * Invoke default attribute and model class declarations      *

# **************************************************************
include "defaultClassDecls.rnc" inherit = mei
# **************************************************************

# * Define a class for start elements                          *

# **************************************************************
model.startLike = mei | music
# **************************************************************

# * Invoke the startLike class                                 *

# **************************************************************
start = model.startLike
# **************************************************************

# * Include modules                                            *

# **************************************************************
include "coConstraints.rnc" inherit = mei
# The shared and header modules must be included.
include "shared_Module.rnc" inherit = mei
include "header_Module.rnc" inherit = mei
# One or more of the CMN, mensural, or neumes modules must be
# included in order to encode musical content.
include "cmn_Module.rnc" inherit = mei
include "mensural_Module.rnc" inherit = mei
include "neumes_Module.rnc" inherit = mei
# The following modules are optional.
include "analysis_Module.rnc" inherit = mei
include "cmnOrnaments_Module.rnc" inherit = mei
include "corpus_Module.rnc" inherit = mei
include "critapp_Module.rnc" inherit = mei
include "edittrans_Module.rnc" inherit = mei
include "facsimile_Module.rnc" inherit = mei
include "figtable_Module.rnc" inherit = mei
include "harmony_Module.rnc" inherit = mei
include "linkalign_Module.rnc" inherit = mei
include "lyrics_Module.rnc" inherit = mei
include "midi_Module.rnc" inherit = mei
include "namesdates_Module.rnc" inherit = mei
include "ptrref_Module.rnc" inherit = mei
include "tablature_Module.rnc" inherit = mei
include "text_Module.rnc" inherit = mei
include "usersymbols_Module.rnc" inherit = mei
