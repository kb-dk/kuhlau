namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"
namespace mei = "http://www.music-encoding.org/ns/mei"
namespace sch = "http://purl.oclc.org/dsdl/schematron"
namespace tei = "http://www.tei-c.org/ns/1.0"
namespace xhtml = "http://www.w3.org/1999/xhtml"
namespace xlink = "http://www.w3.org/1999/xlink"

# Tablature Module

# Declare module attr classes
[
  a:documentation [
    xml:lang = "eng"
    "Gestural domain attributes for staffdef in\x{a}" ~
    "      tablature"
  ]
]
att.staffdef.ges &=
  [
    a:documentation [
      xml:lang = "eng"
      "provides a written pitch and octave for\x{a}" ~
      '          each open string, e.g. "e3 a3 d4 g4 b4 e5" for standard guitar tuning.\x{a}' ~
      "          It should contain the number of tokens indicated by the lines\x{a}" ~
      "          attribute. Chromatic alteration may be indicated with '-', or 'f',\x{a}" ~
      "          (flat) and '#', or 's' (sharp). Double sharps and flats are not\x{a}" ~
      "          permitted."
    ]
  ]
  attribute tab.strings {
    list {
      xsd:NMTOKEN { pattern = "[a-g][\-#fs]?[0-9]" }+
    }
  }?
[ a:documentation [ xml:lang = "eng" "Gestural domain attributes" ] ]
att.note.ges &=
  [
    a:documentation [
      xml:lang = "eng"
      "records the fret at which a string\x{a}" ~
      "          should be stopped."
    ]
  ]
  attribute tab.fret { data.FRETNUMBER }?,
  [
    a:documentation [
      xml:lang = "eng"
      "records which string is to be\x{a}" ~
      "          played."
    ]
  ]
  attribute tab.string { data.STRINGNUMBER }?
# Declare module model classes

# Declare module elements
