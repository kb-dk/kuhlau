namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"
default namespace mei = "http://www.music-encoding.org/ns/mei"
namespace sch = "http://purl.oclc.org/dsdl/schematron"
namespace tei = "http://www.tei-c.org/ns/1.0"
namespace xhtml = "http://www.w3.org/1999/xhtml"
namespace xlink = "http://www.w3.org/1999/xlink"

# Facsimile module

# Declare module attr classes
att.facsimile &=
  [
    a:documentation [
      xml:lang = "eng"
      "permits the current element to reference\x{a}" ~
      "          a facsimile image or image zone which corresponds to\x{a}" ~
      "          it."
    ]
  ]
  attribute facs { xsd:IDREFS }?
# Declare module model classes
model.facsimileLike &= facsimile
# Declare module elements
content.facsimile = surface*
facsimile =
  [
    a:documentation [
      xml:lang = "eng"
      "facsimile ― Contains a representation of\x{a}" ~
      "        some written source in the form of a set of images rather than as\x{a}" ~
      "        transcribed or encoded text. The source attribute may be used to link\x{a}" ~
      "        the collection of images with a particular source described in the\x{a}" ~
      "        header. This element is modelled on an element in the Text Encoding\x{a}" ~
      "        Initiative (TEI)."
    ]
  ]
  element facsimile { attlist.facsimile, content.facsimile }
attlist.facsimile = att.common, att.source
content.surface = model.figdescLike*, model.graphicLike*, zone*
surface =
  [
    a:documentation [
      xml:lang = "eng"
      "surface ― Defines a written surface in\x{a}" ~
      "        terms of a rectangular coordinate space, optionally grouping one or more\x{a}" ~
      "        graphic representations of that space, and rectangular zones of interest\x{a}" ~
      "        within it. The startid attribute may be used to hold a reference to the\x{a}" ~
      "        first feature occurring on this surface. This element is modelled on an\x{a}" ~
      "        element in the Text Encoding Initiative (TEI)."
    ]
  ]
  element surface { attlist.surface, content.surface }
attlist.surface = att.common, att.coordinated, att.startid
content.zone = model.figdescLike*, model.graphicLike*
zone =
  [
    a:documentation [
      xml:lang = "eng"
      "zone ― Defines a rectangular area\x{a}" ~
      "        contained within a surface. This element is modelled on an element in the\x{a}" ~
      "        Text Encoding Initiative (TEI)."
    ]
  ]
  element zone { content.zone, attlist.zone }
attlist.zone = att.common, att.coordinated
